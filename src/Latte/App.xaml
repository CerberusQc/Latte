<Application x:Class="Latte.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Latte"
             StartupUri="Views/Main.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Definitions/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Definitions/Fonts.xaml"/>
                <ResourceDictionary Source="Resources/Definitions/Sizes.xaml"/>
                <ResourceDictionary Source="Resources/Definitions/Styles.xaml"/>
                <ResourceDictionary Source="Resources/Icons/Icons.xaml"/> 
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
