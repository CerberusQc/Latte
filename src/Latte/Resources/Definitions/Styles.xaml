<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="HoverBtnStyle" TargetType="Button">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontFamily" Value="{StaticResource Orbitron}"/>
        <Setter Property="Foreground" Value="{StaticResource LightColorBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource DarkColorBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <ControlTemplate x:Key="BtnTemplate" TargetType="Button">
        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </ControlTemplate>
</ResourceDictionary>