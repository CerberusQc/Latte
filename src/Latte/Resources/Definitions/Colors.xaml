<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="MainColor">#6441a5</Color>
    <Color x:Key="SecondaryColor">#b9a3e3</Color>
    <Color x:Key="DarkColor">#262626</Color>
    <Color x:Key="LightColor">#f1f1f1</Color>
    <SolidColorBrush x:Key="MainColorBrush" Color="{StaticResource MainColor}"/>
    <SolidColorBrush x:Key="SecondaryColorBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="DarkColorBrush" Color="{StaticResource DarkColor}"/>
    <SolidColorBrush x:Key="LightColorBrush" Color="{StaticResource LightColor}"/>
</ResourceDictionary>